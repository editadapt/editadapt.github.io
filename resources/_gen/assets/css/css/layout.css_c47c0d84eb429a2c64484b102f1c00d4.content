:root{--navbar-height: 5vh;--footer-height: 5vh;--grid-gap: 5ch;--font-sans: sans-serif;--font-interface: var(--font-sans)}body{height:100vh;display:grid;grid-template-columns:minmax(10vw,1fr)1fr 1fr 1fr;grid-template-rows:var(--navbar-height)90vh var(--footer-height);grid-template-areas:"logo menu menu menu" "sidebar main main main" "footer footer footer footer "}.logo{grid-area:logo;margin:auto}main.book-index,main.book-single{grid-area:main;display:block;height:calc(100vh - var(--navbar-height) - var(--footer-height))}.sidebar{grid-area:sidebar;overflow:auto;height:100%;padding:2em}.sidebar label{display:block;padding:1em}main{grid-area:main;overflow:auto;height:100%;padding:2em;padding:2em}.topbar{grid-area:menu;flex-direction:row-reverse;background:var(--color-background,white);padding:0 5vh;z-index:10000000;display:flex;align-items:center;justify-content:space-between;font-family:var(--font-interface);text-transform:uppercase;top:0;position:sticky}.topbar nav{width:100%}.topbar nav ul{display:flex;align-items:center;list-style-type:none;padding:0;margin:0;width:100%;justify-content:flex-end}.topbar nav ul li{line-height:1;margin:0 1em}.topbar nav ul li a{text-decoration:none;border-bottom:2px solid var(--color-accent,black)}div.highlight{max-width:100%}div.highlight pre{white-space:pre-wrap}footer{grid-area:footer;background:var(--color-background,white);display:flex;align-content:center;justify-content:flex-end}footer a{margin-right:3em}[for=menuList]{padding:.4em 1.3ch;background:#fff}.menu-check{display:none}.menu-check+nav{display:none}.menu-check:checked+nav{display:flex;flex-direction:column}@media screen and (min-width:769px){#menuTOC+nav{display:block}.topbar [for=menuList]{display:none}.topbar nav{display:flex;flex-direction:row}}@media screen and (max-width:768px){body{display:block}#menuTOC+nav{display:none}#menuTOC:checked+nav{display:block;position:absolute;background:#ff0;z-index:40000;overflow-y:auto;width:100%}.sidebar{grid-area:footer;text-align:center;height:auto;position:unset}footer{display:none}main.book-single,main.book-index{height:auto}.sidebar .toc{height:auto}.sidebar label{padding:1em}.logo{text-align:center;font-size:3em}.topbar{flex-direction:column}.topbar nav{flex-direction:row;height:auto;padding-bottom:3em}.topbar nav ul{align-items:center;flex-direction:column;padding:0;margin:0}.topbar nav ul li{padding:1em}}.pagedjs_pages{flex-direction:column;width:100%}.pagedjs_first_page{margin-left:0}.pagedjs_page{margin:0 auto;margin-top:10mm}@media print{body{display:block}main{overflow:unset}.logo{}.topbar{display:none}main.book-index,main.book-single{height:auto}.sidebar{display:none}footer{position:fixed}.content{display:auto;height:unset;padding:0;overflow:unset}}